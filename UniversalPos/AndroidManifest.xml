<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.universalpos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.universalpos.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.universalpos.Inventory"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name="com.universalpos.Sale"
            android:label="@string/title_activity_sale" >
        </activity>
        <activity
            android:name="com.universalpos.Customer"
            android:label="@string/title_activity_customer" >
        </activity>
        <activity
            android:name="com.universalpos.History"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name="com.universalpos.AddInventory"
            android:label="@string/title_activity_add_inventory" >
        </activity>
    </application>

</manifest>
